{
    "compilerOptions": {
      "jsx": "react",
      "target": "ES2020",
      "module": "CommonJS",
      "lib": ["ES2020"],
      "moduleResolution": "Node",
      "outDir": "./dist",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmitOnError": true,
      "composite": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }
  